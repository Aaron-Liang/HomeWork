@model IEnumerable<HomeWork.Models.ViewModels.MoneyTemplateViewModels>

@{
    Layout = null;
    var i = 0;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <thead class="bg-primary">
                <tr>
                    <th width="10%">#</th>
                    <th width="30%">@Html.DisplayNameFor(model => model.category)</th>
                    <th width="30%">@Html.DisplayNameFor(model => model.date)</th>
                    <th width="30%">@Html.DisplayNameFor(model => model.money)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="10%">@(++i)</td>
                        <td width="30%">
                            @{
                                if (item.category == 0)
                                {
                                    <p class="text-danger">@Html.DisplayFor(modelItem => item.category)</p>
                                }
                                else
                                {
                                    <p class="text-primary">@Html.DisplayFor(modelItem => item.category)</p>
                                }
                            }
                        </td>
                        <td width="30%">
                            @(item.date.ToString("yyyy-MM-dd"))
                        </td>
                        <td width="30%">
                            @(item.money.ToString("#,0"))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
